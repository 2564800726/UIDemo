<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_music_image"
        android:src="@drawable/bg_main"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_music_name"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/iv_music_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_music_image"
        app:layout_constraintBottom_toBottomOf="@id/tv_music_count"
        app:layout_constraintHorizontal_bias="0.1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_music_count"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/iv_music_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintTop_toBottomOf="@id/tv_music_name"
        app:layout_constraintBottom_toBottomOf="@id/iv_music_image" />
</android.support.constraint.ConstraintLayout>
